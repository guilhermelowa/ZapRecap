[flake8]
exclude = 
    .git,
    __pycache__,
    venv/,
    .venv/,
    */venv/*,
    */.venv/*,
    build/,
    dist/,
    *.egg-info

max-line-length = 100
max-complexity = 10
# Ignore some style errors that conflict with black
ignore = E203, W503
per-file-ignores =
    # Ignore unused imports in __init__.py files
    __init__.py: F401 